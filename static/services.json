[
  {
    "id": "auth-service",
    "gateway_prefix": "/api/auth",
    "target_service": {
        "host_var": "AUTH_SERVICE_HOST",
        "base_path": "/api/auth"
    },
    "timeouts": {
        "connect_ms": 3000,
        "read_ms": 10000
    },
    "routes": [
        {
            "route": "/login",
            "methods": ["POST"],
            "auth_required": false
        },
        {
            "route": "/register/adult",
            "methods": ["POST"],
            "auth_required": false
        },
        {
            "route": "/register/tutor",
            "methods": ["POST"],
            "auth_required": false
        },
        {
            "route": "/register/minor",
            "methods": ["POST"],
            "auth_required": false
        },
        {
            "route": "/health",
            "methods": ["GET"],
            "auth_required": false
        }
    ]
  },
  {
    "id": "questionnaire-service",
    "gateway_prefix": "/api/v1/questionnaire",
    "target_service": {
        "host_var": "ML_SERVICE_HOST",
        "base_path": "/api/v2"
    },
    "timeouts": {
        "connect_ms": 5000,
        "read_ms": 30000
    },
    "routes": [
        {
            "route": "/session/start",
            "methods": ["POST"],
            "auth_required": true
        },
        {
            "route": "/session/:session_id/next-question",
            "methods": ["GET"],
            "auth_required": true
        },
        {
            "route": "/session/:session_id/answer",
            "methods": ["POST"],
            "auth_required": true
        },
        {
            "route": "/session/:session_id/prediction",
            "methods": ["GET"],
            "auth_required": true
        },
        {
            "route": "/health",
            "methods": ["GET"],
            "auth_required": false
        },
        {
            "route": "/demo",
            "methods": ["GET"],
            "auth_required": false
        }
    ]
  }
]